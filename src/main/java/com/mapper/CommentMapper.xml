<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.CommentMapper">

    <select id="getCommentByPage" resultType="com.bean.Comment">
        select * from comment where enabled=true  ORDER BY commentDate DESC limit #{page},#{size}
    </select>

    <insert id="addComment">
        insert into comment(username,commentContent) values (#{cmt.username},#{cmt.commentContent})
    </insert>

</mapper>
    
    
    
    